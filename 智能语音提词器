    <script>
        // å…¨å±€å˜é‡
        let recognition = null;
        let isListening = false;
        let scriptLines = [];
        let currentLine = 0;
        let scrollSpeed = 3;
        let sensitivity = 5;
        let voiceControlEnabled = false;
        let fontSize = 'medium';
        let autoScrollInterval = null;
        let lastMatchTime = 0;
        let consecutiveMatches = 0;

        // åˆå§‹åŒ–è¯­éŸ³è¯†åˆ«
        function initSpeechRecognition() {
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            if (!SpeechRecognition) {
                showToast('æ‚¨çš„æµè§ˆå™¨ä¸æ”¯æŒè¯­éŸ³è¯†åˆ«ï¼Œè¯·ä½¿ç”¨ Chrome æˆ– Safari');
                return null;
            }

            const rec = new SpeechRecognition();
            rec.continuous = true;
            rec.interimResults = true;
            rec.lang = 'zh-CN';
            
            rec.onstart = () => {
                isListening = true;
                updateStatus(true);
                document.getElementById('voiceVisualizer').classList.add('active');
                document.getElementById('modeBadge').classList.add('show');
                showToast('ğŸ¤ å¼€å§‹ç›‘å¬æ‚¨çš„å£°éŸ³...');
            };

            rec.onend = () => {
                isListening = false;
                updateStatus(false);
                document.getElementById('voiceVisualizer').classList.remove('active');
                document.getElementById('modeBadge').classList.remove('show');
                
                // å¦‚æœä»åœ¨å£°æ§æ¨¡å¼ï¼Œè‡ªåŠ¨é‡å¯
                if (voiceControlEnabled) {
                    setTimeout(() => {
                        if (voiceControlEnabled) startRecognition();
                    }, 500);
                }
            };

            rec.onresult = (event) => {
                handleSpeechResult(event);
            };

            rec.onerror = (event) => {
                console.error('è¯­éŸ³è¯†åˆ«é”™è¯¯:', event.error);
                if (event.error === 'not-allowed') {
                    showToast('è¯·å…è®¸éº¦å…‹é£æƒé™');
                    voiceControlEnabled = false;
                    updateVoiceBtn();
                }
            };

            return rec;
        }

        // å¤„ç†è¯­éŸ³è¯†åˆ«ç»“æœ
        function handleSpeechResult(event) {
            const results = event.results;
            const lastResult = results[results.length - 1];
            const transcript = lastResult[0].transcript.toLowerCase().trim();
            
            // å¯è§†åŒ–æ•ˆæœ
            visualizeVoice();
            
            // æŸ¥æ‰¾åŒ¹é…çš„è¡Œ
            findAndScrollToMatch(transcript);
        }

        // æŸ¥æ‰¾åŒ¹é…æ–‡æœ¬å¹¶æ»šåŠ¨
        function findAndScrollToMatch(text) {
            const now = Date.now();
            let bestMatch = -1;
            let maxScore = 0;

            // åœ¨å½“å‰ä½ç½®å‰åèŒƒå›´å†…æœç´¢
            const searchRange = 5;
            const start = Math.max(0, currentLine - searchRange);
            const end = Math.min(scriptLines.length, currentLine + searchRange + 3);

            for (let i = start; i < end; i++) {
                const lineText = scriptLines[i].toLowerCase();
                const score = calculateMatchScore(text, lineText);
                
                if (score > maxScore && score > 0.3) {
                    maxScore = score;
                    bestMatch = i;
                }
            }

            if (bestMatch !== -1 && bestMatch !== currentLine) {
                // é˜²æ­¢æŠ–åŠ¨ï¼šè¿ç»­åŒ¹é…æ‰è·³è½¬
                if (bestMatch === currentLine + 1) {
                    consecutiveMatches++;
                    if (consecutiveMatches >= 1) {
                        scrollToLine(bestMatch);
                        consecutiveMatches = 0;
                    }
                } else {
                    consecutiveMatches = 0;
                    scrollToLine(bestMatch);
                }
                lastMatchTime = now;
            }
        }

        // è®¡ç®—åŒ¹é…åˆ†æ•°ï¼ˆæ¨¡ç³ŠåŒ¹é…ï¼‰
        function calculateMatchScore(source, target) {
            // ç®€åŒ–å¤„ç†ï¼šåŒ…å«å…³ç³»æˆ–ç›¸ä¼¼åº¦
            if (target.includes(source) || source.includes(target)) {
                return 1.0;
            }
            
            // è®¡ç®—è¯è¯­é‡å åº¦
            const sourceWords = source.split(/[\s,ï¼Œã€‚ï¼ï¼Ÿ.!?]+/).filter(w => w.length > 1);
            const targetWords = target.split(/[\s,ï¼Œã€‚ï¼ï¼Ÿ.!?]+/).filter(w => w.length > 1);
            
            if (sourceWords.length === 0 || targetWords.length === 0) return 0;
            
            let matchCount = 0;
            sourceWords.forEach(word => {
                if (targetWords.some(tw => tw.includes(word) || word.includes(tw))) {
                    matchCount++;
                }
            });
            
            return matchCount / Math.max(sourceWords.length, targetWords.length);
        }

        // æ»šåŠ¨åˆ°æŒ‡å®šè¡Œ
        function scrollToLine(index) {
            if (index < 0 || index >= scriptLines.length) return;
            
            currentLine = index;
            const lines = document.querySelectorAll('.text-line');
            
            lines.forEach((line, i) => {
                line.classList.remove('active', 'passed');
                if (i < index) {
                    line.classList.add('passed');
                } else if (i === index) {
                    line.classList.add('active');
                }
            });

            // è®¡ç®—æ»šåŠ¨ä½ç½®ï¼ˆå°†å½“å‰è¡Œç½®äºå±å¹•ä¸­é—´ï¼‰
            const displayHeight = document.getElementById('textDisplay').clientHeight;
            const lineHeight = lines[0]?.offsetHeight || 60;
            const offset = displayHeight / 2 - lineHeight / 2 - (index * lineHeight) - 20;
            
            document.getElementById('textContent').style.transform = `translateY(${offset}px)`;
            
            // æ›´æ–°è¿›åº¦æ¡
            const progress = ((index + 1) / scriptLines.length) * 100;
            document.getElementById('progressBar').style.width = `${progress}%`;
        }

        // å¼€å§‹æè¯å™¨
        function startTeleprompter() {
            const input = document.getElementById('scriptInput').value.trim();
            if (!input) {
                showToast('è¯·å…ˆè¾“å…¥è„šæœ¬å†…å®¹');
                return;
            }

            // è§£æè„šæœ¬
            scriptLines = input.split(/[\n\r]+/).filter(line => line.trim());
            if (scriptLines.length === 0) {
                showToast('è„šæœ¬å†…å®¹ä¸èƒ½ä¸ºç©º');
                return;
            }

            // æ¸²æŸ“æ–‡æœ¬
            renderText();
            
            // åˆ‡æ¢ç•Œé¢
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('teleprompter').classList.add('active');
            
            // åˆå§‹åŒ–è¯­éŸ³è¯†åˆ«
            recognition = initSpeechRecognition();
            
            // é»˜è®¤å¼€å¯å£°æ§
            setTimeout(() => {
                if (recognition) toggleVoiceControl();
            }, 500);

            // æ»šåŠ¨åˆ°ç¬¬ä¸€è¡Œ
            setTimeout(() => scrollToLine(0), 100);
        }

        // æ¸²æŸ“æ–‡æœ¬
        function renderText() {
            const content = document.getElementById('textContent');
            content.innerHTML = scriptLines.map((line, index) => 
                `<div class="text-line" data-index="${index}">${escapeHtml(line)}</div>`
            ).join('');
        }

        // è½¬ä¹‰HTML
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // åˆ‡æ¢å£°æ§
        function toggleVoiceControl() {
            if (!recognition) {
                showToast('æ‚¨çš„è®¾å¤‡ä¸æ”¯æŒè¯­éŸ³è¯†åˆ«');
                return;
            }

            voiceControlEnabled = !voiceControlEnabled;
            updateVoiceBtn();

            if (voiceControlEnabled) {
                startRecognition();
            } else {
                stopRecognition();
                showToast('å·²åˆ‡æ¢åˆ°æ‰‹åŠ¨æ¨¡å¼');
            }
        }

        // æ›´æ–°å£°æ§æŒ‰é’®çŠ¶æ€
        function updateVoiceBtn() {
            const btn = document.getElementById('voiceBtn');
            if (voiceControlEnabled) {
                btn.classList.add('active');
                btn.style.background = '#00d4ff';
            } else {
                btn.classList.remove('active');
                btn.style.background = '';
            }
        }

        // å¼€å§‹è¯†åˆ«
        function startRecognition() {
            if (!recognition || isListening) return;
            try {
                recognition.start();
            } catch (e) {
                console.error('å¯åŠ¨è¯†åˆ«å¤±è´¥:', e);
            }
        }

        // åœæ­¢è¯†åˆ«
        function stopRecognition() {
            if (!recognition || !isListening) return;
            try {
                recognition.stop();
            } catch (e) {
                console.error('åœæ­¢è¯†åˆ«å¤±è´¥:', e);
            }
        }

        // æ›´æ–°çŠ¶æ€æŒ‡ç¤ºå™¨
        function updateStatus(listening) {
            const dot = document.getElementById('statusDot');
            const text = document.getElementById('statusText');
            if (listening) {
                dot.classList.add('listening');
                text.textContent = 'è†å¬ä¸­';
            } else {
                dot.classList.remove('listening');
                text.textContent = voiceControlEnabled ? 'è¿æ¥ä¸­...' : 'å°±ç»ª';
            }
        }

        // è¯­éŸ³å¯è§†åŒ–åŠ¨ç”»
        function visualizeVoice() {
            const bars = document.querySelectorAll('.voice-bar');
            bars.forEach(bar => {
                const height = Math.random() * 30 + 5;
                bar.style.height = `${height}px`;
            });
        }

        // æ‰‹åŠ¨æ»šåŠ¨
        function manualScroll(direction) {
            const newLine = currentLine + direction;
            if (newLine >= 0 && newLine < scriptLines.length) {
                scrollToLine(newLine);
            }
        }

        // åˆ‡æ¢æ§åˆ¶æ æ˜¾ç¤º
        function toggleControls() {
            const bar = document.getElementById('controlBar');
            bar.classList.toggle('hidden');
        }

        // åˆ‡æ¢è®¾ç½®é¢æ¿
        function toggleSettings() {
            const panel = document.getElementById('settingsPanel');
            panel.classList.toggle('open');
        }

        // æ›´æ–°é€Ÿåº¦
        function updateSpeed() {
            scrollSpeed = parseInt(document.getElementById('speedSlider').value);
        }

        // æ›´æ–°çµæ•åº¦
        function updateSensitivity() {
            sensitivity = parseInt(document.getElementById('sensitivitySlider').value);
            document.getElementById('sensitivityValue').textContent = sensitivity;
        }

        // è®¾ç½®å­—ä½“å¤§å°
        function setFontSize(size) {
            fontSize = size;
            const lines = document.querySelectorAll('.text-line');
            const sizes = {
                small: { normal: '20px', active: '24px' },
                medium: { normal: '28px', active: '32px' },
                large: { normal: '36px', active: '42px' }
            };
            
            lines.forEach(line => {
                line.style.fontSize = sizes[size].normal;
                if (line.classList.contains('active')) {
                    line.style.fontSize = sizes[size].active;
                }
            });

            // æ›´æ–°æŒ‰é’®çŠ¶æ€
            document.querySelectorAll('.size-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent === (size === 'small' ? 'å°' : size === 'medium' ? 'ä¸­' : 'å¤§')) {
                    btn.classList.add('active');
                }
            });

            // é‡æ–°å®šä½å½“å‰è¡Œ
            scrollToLine(currentLine);
        }

        // è®¾ç½®ä¸»é¢˜
        function setTheme(theme) {
            const display = document.getElementById('textDisplay');
            const lines = document.querySelectorAll('.text-line');
            
            document.querySelectorAll('.theme-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            if (theme === 'white') {
                display.style.background = '#fff';
                lines.forEach(line => {
                    line.style.color = 'rgba(0,0,0,0.4)';
                    if (line.classList.contains('active')) {
                        line.style.color = '#000';
                        line.style.textShadow = 'none';
                    }
                });
            } else if (theme === 'black') {
                display.style.background = '#000';
                lines.forEach(line => {
                    line.style.color = 'rgba(255,255,255,0.4)';
                    if (line.classList.contains('active')) {
                        line.style.color = '#00ff88';
                        line.style.textShadow = '0 0 20px rgba(0,255,136,0.3)';
                    }
                });
            } else if (theme === 'green') {
                display.style.background = '#001a00';
                lines.forEach(line => {
                    line.style.color = 'rgba(0,255,0,0.3)';
                    if (line.classList.contains('active')) {
                        line.style.color = '#00ff00';
                        line.style.textShadow = '0 0 10px rgba(0,255,0,0.5)';
                    }
                });
            }
        }

        // é€€å‡ºæè¯å™¨
        function exitTeleprompter() {
            if (confirm('ç¡®å®šè¦é€€å‡ºå—ï¼Ÿ')) {
                stopRecognition();
                voiceControlEnabled = false;
                document.getElementById('teleprompter').classList.remove('active');
                document.getElementById('startScreen').classList.remove('hidden');
                document.getElementById('settingsPanel').classList.remove('open');
            }
        }

        // åŠ è½½ç¤ºä¾‹
