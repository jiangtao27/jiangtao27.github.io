        // æ˜¾ç¤ºæç¤º
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // é”®ç›˜æ§åˆ¶ï¼ˆæ¡Œé¢ç«¯ï¼‰
        document.addEventListener('keydown', (e) => {
            if (!document.getElementById('teleprompter').classList.contains('active')) return;
            
            if (e.key === 'ArrowDown' || e.key === ' ') {
                e.preventDefault();
                manualScroll(1);
            } else if (e.key === 'ArrowUp') {
                e.preventDefault();
                manualScroll(-1);
            } else if (e.key === 'Escape') {
                toggleSettings();
            }
        });

        // è§¦æ‘¸æ»‘åŠ¨æ”¯æŒ
        let touchStartY = 0;
        document.getElementById('textDisplay').addEventListener('touchstart', (e) => {
            touchStartY = e.touches[0].clientY;
        });

        document.getElementById('textDisplay').addEventListener('touchend', (e) => {
            const touchEndY = e.changedTouches[0].clientY;
            const diff = touchStartY - touchEndY;
            if (Math.abs(diff) > 50) {
                if (diff > 0) {
                    manualScroll(1);
                } else {
                    manualScroll(-1);
                }
            }
        });

        // é˜²æ­¢é¡µé¢æ»šåŠ¨
        document.addEventListener('touchmove', (e) => {
            if (e.target.closest('.text-display')) {
                e.preventDefault();
            }
        }, { passive: false });
    </script>
</body>
